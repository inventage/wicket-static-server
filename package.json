{
  "name": "@inventage/wicket-static-server",
  "version": "1.0.0-beta.0",
  "description": "Resolve Wicket's template hierarchy and render all HTML parts as single static pages.",
  "main": "server.js",
  "scripts": {
    "serve": "node server.js --server",
    "format": "npx prettier --write . && npx eslint --fix --ignore-pattern **/*.json",
    "test": "echo \"No test specified\""
  },
  "author": "Inventage AG",
  "bin": {
    "wicket-static-server": "./server.js"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^6.0.0",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "express": "^4.17.1",
    "extend": "^3.0.2",
    "glob": "^7.1.6",
    "graceful-fs": "^4.2.4",
    "marked": "^1.1.1",
    "recursive-readdir-sync": "^1.0.6",
    "serve-index": "^1.9.1",
    "swig-highlight": "^0.2.0",
    "swig-templates": "^2.0.3"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  }
}
